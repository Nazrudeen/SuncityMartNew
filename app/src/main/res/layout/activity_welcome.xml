<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suncitytechnoe.suncitymartnew.activity.WelcomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Welcome to"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/suncitymart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcome"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Suncity Mart"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="35sp"
                android:textStyle="italic" />


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_below="@id/suncitymart"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/welcome_imagej" />


            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="5dp"
                android:text="Each online store has its own store and bag, but if you want to go shopping in multiple places at once, so you only have one bag. "
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/getstarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="serif"
        android:text="GET STARTED"
        android:textColor="#fff"
        android:textSize="20sp" />

</RelativeLayout>